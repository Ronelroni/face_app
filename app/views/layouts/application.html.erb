<!DOCTYPE html>
<html>
  <head>
    <title>Facebook3App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-light bg-cyan p-3">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">FaceBook</span>

            <div class="">
                <%= link_to 'FaceBook', new_post_path , class: "btn btn-outline-primary"%>
                <%= link_to 'View all posts', posts_path , class: "btn btn-outline-secondary"%>
            </div>
        </div>
    </nav>
</header>
<% flash.each do |key, value| %>
  flash.now[:danger] = 'Login failed'
  <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
  <% if logged_in? %> 
 <%= link_to "Profile", user_path(current_user.id) %> 
 <%= link_to "Logout", session_path(current_user.id), method: :delete %> 
 <% else %> 
 <%= link_to "Sign up", new_user_path %> 
 <%= link_to "Login", new_session_path %> 
 <% end %>  
<%= yield %>
</body>
</html>
